{% extends '::frontend.html.twig' %}

{% block title %}Ver / Modificar mis datos{% endblock %}
{% block id 'perfil' %}
{% block contenido %}

<script type="text/javascript">

    function deleteAccount(user_id)
    {
        var token = 1;

        $.post("{{path('usuario_perfil')}}",
        {
            token:token,
            user:user_id,

        }, 'json');
    }

</script>

<div id="perfil" class="panel">
    <div id="perfilSombra" class="panel">
    <ul class="nav nav-tabs nav-perfil">
      <li class="active"><a href="{{path('usuario_perfil')}}">Datos del Perfil</a></li>
      <li><a class="historialLink" href="{{path('pagina_historial',{'user_id' : app.user.id})}}">Historial</a></li>
    </ul>

<form id="form-perfil" action="{{ path('usuario_perfil') }}" method="post" {{form_enctype(formulario) }} class="form-perfil">

    {{ form_rest(formulario) }}
    <input class="boton btn btn-lg btn-boton " type="submit" value="Guardar cambios" />
    <a class="btn btn-lg btn-boton" role="button" href="{{path('usuario_logout')}}" onClick="deleteAccount('{{app.user.id}}')">Eliminar Cuenta</a>
    </form>
    </div>
</div>
{% endblock %}



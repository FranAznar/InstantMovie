{# src/InstantMovie/FrontendBundle/Resources/views/Default/cajaLogin.html.twig #}
{% if is_granted('ROLE_USUARIO') %}

    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="info">{{ mensaje }}</p>
    {% endfor %}
        <p>Conectado como {{ app.user.nickname }}</p>
        <a href="{{ path('usuario_perfil') }}">Ver mi perfil</a>&nbsp &nbsp
        <a href="{{ path('usuario_logout') }}">Cerrar sesión</a>&nbsp &nbsp
        <a href="{{ path('portada') }}">Entrar</a>&nbsp &nbsp
{% else %}
<h2>Accede a tu cuenta</h2>


    <form action="{{ path('usuario_login_check') }}" method="post">

        <label for="login_user">Email</label>
        <input id="login_user" type="text" name="_username" value="{{ last_username | default('') }}" />
        <label for="login_pass">Contraseña</label>
        <input id="login_pass" type="password" name="_password" />
        <input type="submit" value="Entrar" />
        <input type="checkbox" id="no_cerrar" name="_remember_me" checked />
        <label for="no_cerrar">No cerrar sesión</label>

  
        <input type="hidden" name="usuario_logout" value="/account" />


    </form>
{% endif %}

